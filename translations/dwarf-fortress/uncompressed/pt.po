msgid "[LINK:data/help/menu_buildjob_farmplot]Farm Plot Menu[/LINK]"
msgstr ""

#: menu_buildjob:26
msgid "[LINK:data/help/menu_buildjob_depot]Trade Depot Menu[/LINK]"
msgstr ""

#: menu_buildjob:27
msgid "[LINK:data/help/menu_buildjob_shop]Shop Menu[/LINK]"
msgstr "[LINK:data/help/menu_buildjob_shop]Menu de Loja[/LINK]"

#: menu_buildjob:28
msgid "[LINK:data/help/menu_buildjob_lever]Lever Menu[/LINK]"
msgstr "[LINK:data/help/menu_buildjob_lever]Menu de Alavanca[/LINK]"

#: menu_buildjob:29
msgid "[LINK:data/help/menu_buildjob_siege]Siege Engine Menu[/LINK]"
msgstr ""

